public class Genre 
{
	private static String[] nomGenre;
	
	public Genre()
	{
		nomGenre = new String["ACTION","COMEDIE", "THRILLER","ANIMATION","DRAME"];
	}
	
	
	public String getNomGenre()
	{
		return nomGenre;
	}
	
	/*
	*
	*
	*/
	public static void addNomGenre(String genre)
	{
		String[] newNomGenre = [nomGenre.length++];	//tableau d'une unit√© en +.
		
			//copie des valeurs dans lenouveau tableau.
		for(int i = 0; i < nomGenre.length;i++)
		{
			newNomGenre[i] = nomGenre[i];
			
		}
		newNomGenre[nomGenre.length - 1] = genre;
		nomGenre = newNomGenre;
	}
	
	
}
