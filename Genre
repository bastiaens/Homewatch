public class Genre 
{
	private String[] listeGenre = new String []{"ACTION","COMEDIE", "THRILLER","ANIMATION","DRAME"};	//ensemble des genres disponibles
	private String genreDeLoeuvre;		//genre du film ou de la serie.
	
	/*
	*Constructeur par defaut d'objets de type Genre.
	*
	*/
	public Genre()
	{
		this.genreDeLoeuvre = "Genre de l'oeuvre";	
	}
	/*
	* Constructeur d'objets de type Genre.
	*
	*/
	public Genre(String genre)
	{
		boolean genreExistant = false;
		for(int i = 0; i < listeGenre.length; i++)
		{
			if(listeGenre[i] == genreDeLoeuvre)
			{
				this.genreDeLoeuvre = genre;
				genreExistant = true;
			}
		}
		if(!genreExistant)
		{
			addNewGenre(genre);
		}
		
	}
	
	/*
	*Methode de recuperation du genre.
	*
	*
	*/
	public String getGenre()
	{
		return genreDeLoeuvre;
	}
	
	/*
	*
	*Methode d'ajout d'un nouveau genre
	*/
	public void addNewGenre(String genre)
	{
		int tailleNouveauTableau = listeGenre.length + 1;// variable de travail
		
		String[] newNomGenre = new String[tailleNouveauTableau];	//tableau d'une unitÃ© en +.
		
			//copie des valeurs dans lenouveau tableau.
		for(int i = 0; i < listeGenre.length;i++)
		{
			newNomGenre[i] = listeGenre[i];
			
		}
		newNomGenre[listeGenre.length - 1] = genre;
		listeGenre = newNomGenre;
	}
	
	public void setGenre(String genre)
	{
		boolean genreExistant = false;
		for(int i = 0; i < listeGenre.length; i++)
		{
			if(listeGenre[i] == genreDeLoeuvre)
			{
				this.genreDeLoeuvre = genre;
				genreExistant = true;
			}
		}
	}
	
	
}
