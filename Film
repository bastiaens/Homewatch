public class Film
{
	private String titreFilm, realisateur, compositeur,distinctions,genre;
	private int anneeSortie, dureeMinutes;
	private String[] casting;		//rôles titres d'un film.
	
	/**
	*Constructeur sans parametre d'objets de type Film. A utiliser pour tester par defaut.
	*/
	public Film()
	{
		this.titreFilm = "The Lion King";
		this.realisateur = "Jsais pas, mais c'est Disney";
		this.compositeur = "Hans Zimmer";
		this.anneeSortie = 1994;
		this.dureeMinutes = 89;
		this.genre = "Animation 2D";
	}
	
	/**
	*Constructeur d'objets de type Film.
	*@param ti comme titre du film, real comme realisateur du film, an comme annee de sortie du film, duree comme duree en minutes du film
	*
	*/
	public Film(String ti,String real,String comp, int an, int duree)
	{
		this.titreFilm = ti;
		this.realisateur = real;
		this.compositeur = comp;
		this.anneeSortie = an;
		this.dureeMinutes = duree;
		
	}
	
	/**
	*Cette methode renvoie le titre du film sous forme de chaine de caracteres
	*@return Le titre du film
	*/
	public String getTitre()
	{
		return titreFilm;
	}
	
	/**
	*@param titre le titre du film a
	*
	*/
	public void setTitre(String titre)
	{
			this.titreFilm = titre;
	}
	
	/**
	*
	*Cette methode renvoie le nom du réalisateur du film
	*@return le nom du realisateur
	*/
	public String getRealisateur()
	{
		return realisateur;
	}
	
	/**
	*
	*
	*/
	public void setRealisateur(String real)
	{
		this.realisateur = real;
	}
	
	/**
	*
	*@return la duree du film en minutes.
	*/
	public int getDuree()
	{
		return dureeMinutes;
	}
	
	/**
	*
	*
	*/
	public void setDuree(int minutes)
	{
		this.dureeMinutes = minutes;
	}
	
	/**
	*
	*@return l'annee de sortie du film
	*/
	public int getAnneeSortie()
	{
		return anneeSortie;
	}
	
	/**
	*
	*
	*/
	public void setAnneeSortie(int anSortie)
	{
		this.anneeSortie = anSortie;
	}
	
	/**
	*
	*
	*/
	public String[] getActeurs()
	{
		return "";
	}
	
	/**
	*
	*Methode d'ajout d'un/e acteur/actrice au casting du film.
	*/
	public void addActeur(String act)
	{
		boolean ajout = false;
		for(int i=0; i < acteursPrincipaux.length && ajout == false;i++)
		{
			if(acteursPrincipaux[i]== "")
			{
				acteursPrincipaux[i] = act;
				ajout = true;
			}
		}
	}
}
