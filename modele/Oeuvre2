package Videotheque_modele;

/**
 * 
 * @author Olivier Bastiaen
 *
 */

public class Oeuvre {
	private int idFilm;
	private String titre;
	private int idRéalisateur;
	private int idGenre;
	private int date_parution;
	
	public Oeuvre(int idF, String ti, int rea, int genre, int date) {
		this.idFilm = idF;
		this.titre = ti;
		this.idRéalisateur = rea;
		this.idGenre = genre;
		this.date_parution = date;
	}

	public int getIdFilm() {
		return idFilm;
	}

	public void setIdFilm(int idFilm) {
		this.idFilm = idFilm;
	}

	public String getTitre() {
		return titre;
	}

	public void setTitre(String titre) {
		this.titre = titre;
	}

	public int getIdRéalisateur() {
		return idRéalisateur;
	}

	public void setIdRéalisateur(int idRéalisateur) {
		this.idRéalisateur = idRéalisateur;
	}

	public int getIdGenre() {
		return idGenre;
	}

	public void setIdGenre(int idGenre) {
		this.idGenre = idGenre;
	}

	public int getDate_parition() {
		return date_parution;
	}

	public void setDate_parition(int date_parition) {
		this.date_parution = date_parition;
	}

	@Override
	public String toString() {
		return String
				.format("Oeuvre: [idFilm=%s, titre=%s, idRéalisateur=%s, idGenre=%s, date_parution=%s]",
						idFilm, titre,idRéalisateur,idGenre,date_parution);
	}
	
}
