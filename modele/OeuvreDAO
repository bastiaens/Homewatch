	public void removeRowFromJTable(DefaultTableModel model, String titre) throws Exception {
		
		List<Oeuvre> film = new ArrayList<Oeuvre>();
		film = searchOeuvre(titre);
		
		deleteOeuvre(film.get().getTitre());
